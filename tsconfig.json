{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist/esm",
        "strict": false,
        "declarationDir": "./dist/types",
        "declaration": true,
        "paths": {
            "rollup/parseAst": [
                "./node_modules/rollup/dist/parseAst"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
